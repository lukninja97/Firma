<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/text_nome"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_operador" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/image_person"
        app:layout_constraintRight_toRightOf="@id/image_person"
        android:text="Id"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/text_nome"
        android:layout_width="0dp"
        android:maxWidth="350dp"
        android:maxLines="4"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_row"
        android:text="Nome"
        android:textSize="20sp"
        android:padding="3dp"/>

    <View
        android:id="@+id/view_row"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_id"/>

</androidx.constraintlayout.widget.ConstraintLayout>